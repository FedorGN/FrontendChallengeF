{
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.formatOnSave": true,
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "editor.rulers": [100]
  },
  "files.exclude": {
    ".cache": true,
    ".github": true,
    ".next": true,
    ".npm": true,
    ".ssh": true,
    ".vscode-server*": true,
    "node_modules": true,
    ".gitconfig": true
  },
  "cSpell.words": [
    "Datasource",
    "datasources",
    "restapiexample",
    "tanstack"
  ]
}
